<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vgtu.accounting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Accounting">
        <activity
            android:name=".ChooseSystemActivity"
            android:label="Systems"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".popup.CategoryPupUp"
            android:theme="@style/Theme.AppCompat.NoActionBar.Popup" />
        <activity
            android:name=".popup.AccountingPopUp"
            android:theme="@style/Theme.AppCompat.NoActionBar.Popup" />
        <activity
            android:name=".CategoriesActivity"
            android:label="Categories"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Menu"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Accounting login"
            android:parentActivityName=".ChooseSystemActivity">
        </activity>
    </application>

</manifest>